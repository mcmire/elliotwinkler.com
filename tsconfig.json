{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "plugins": [
    {
      "name": "@astrojs/ts-plugin"
    }
  ],
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"]
}
