- articles = blog.articles.select { |a| a.metadata[:page]['category'] == category }

- if articles.any?
  - articles.each do |article|
    .post
      %h3
        %a(href="#{article.url}")
          = article.date.strftime("%B %-d, %Y") + ": "
          = article.title.sub(/Costa Rica: |Asia: /, "")
      - if article.data.features
        .post-features
          %i featuring:
          %ul
            - article.data.features.each do |feature|
              %li>= feature
- else
  %p.text-center There aren't any posts just yet!
