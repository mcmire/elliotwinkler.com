!!! 5
%html
  %head
    %meta(charset="utf-8")
    %meta(content="IE=edge,chrome=1" http-equiv="X-UA-Compatible")
    %meta(name="viewport" content="width=device-width,initial-scale=1")
    %meta{name: "description",
      content: yield_content(:description)&.strip || "The personal site of Elliot Winkler."}
    %title= page_title(default: yield_content(:default_title))
    = stylesheet_link_tag "all.bundle.css"
    - if build?
      = partial "shared/google_analytics"
    %link{rel: "icon", type: "image/gif", href: image_path("favicon.gif")}
    = yield_content :head
  %body(class="invisible dark:bg-gray-800 dark:text-gray-400")
    ~ yield
    = yield_content :javascript
    = javascript_include_tag "all.bundle.js"
